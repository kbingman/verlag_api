<div>
  <div>
      <label>Title</label>
  </div>
  <input type="text" class="page-title" name="title" value="{{ title }}" />
</div>

<div class="v-control-bar">
  <a href="#" class="v-jsNewTextBlockBtn icon-plus" title="Add Text Block"></a>  
  <a href="#" class="v-jsNewImageBlockBtn icon-image" title="Add Image"></a> 
</div>

<div id="textBlocks" class="text-blocks parts">
  {{# blocks }}
    {{# isText }}{{> textBlock }}{{/ isText }}
    {{# isImage }}{{> imageBlock }}{{/ isImage }}
  {{/ blocks }}
</div>

<div class="v-thumbnail-container">
    {{# images }}
      {{> thumbnail }}
    {{/ images }} 
</div>
